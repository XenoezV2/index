  <!-- Heart images -->
  <div id="hearts"></div>

  <script>
    const correctPassword = "060657"; // Change this to the password you want
    let password = "";

    // Add heart animation
    setInterval(() => {
      const heart = document.createElement("span");
      heart.classList.add("heart");
      heart.textContent = "❤️";
      heart.style.left = `${Math.random() * 100}%`;
      document.getElementById("hearts").appendChild(heart);
      setTimeout(() => heart.remove(), 2000); // Remove heart after it falls
    }, 1000);

    function appendDigit(digit) {
      if (password.length < 6) {
        password += digit;
        document.getElementById("passwordInput").value = password;
      }
      if (password.length === 6) {
        checkPassword();
      }
    }

    function clearInput() {
      password = "";
      document.getElementById("passwordInput").value = "";
    }
    function checkPassword() {
  if (password === correctPassword) {
    showAlert("ยินดีด้วยคุณรอดตาย!");
    // รอ 1.5 วินาที แล้วเปลี่ยนหน้าไป readme.html
    setTimeout(() => {
      window.location.href = "index1.html"; // เปลี่ยนเป็น URL ที่คุณต้องการ
    }, 1500);
  } else {
    showAlert("เสียใจด้วยนะ!");
    clearInput();
  }
}

    function showAlert(message) {
      const alertBox = document.getElementById("alert");
      alertBox.textContent = message;
      alertBox.style.display = "block";
      setTimeout(() => {
        alertBox.style.display = "none";
      }, 2500); // Hide alert after 3 seconds
    }
  </script>

